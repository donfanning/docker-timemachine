#!/bin/bash

set -e

if [[ $# -lt 5 ]]; then
  echo "Usage: add-user USERNAME PASSWORD MOUNT_POINT SHARE_NAME TIMEMACHINE(yes,no) [VOL_SIZE_MB]"
  exit 1
fi

# Add the user
adduser -S -H -G root $1
echo $1:$2 | chpasswd

# Create mountpoint
mkdir -p /shares/$3
chown -R $1:root /shares/$3

# Add config to timemachine
  echo "
[${4}]
    path = /shares/${3}
    time machine = ${5}
    valid users = ${1}" >> /etc/afp.conf

if [[ $# -eq 6 ]]; then
  echo "
    vol size limit = ${6}" >> /etc/afp.conf
fi

pkill -HUP afpd
